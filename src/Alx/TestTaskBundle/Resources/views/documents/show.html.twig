{% extends '@AlxTestTask/documents/base.html.twig' %}

{% block body %}
    <h1>Document</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ document.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('documents_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('documents_edit', { 'id': document.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
